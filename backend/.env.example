# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Allowed Hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Render Configuration (Auto-filled in production)
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Database Settings (PostgreSQL - Docker for local development)
# Use these settings when running PostgreSQL via Docker
DB_NAME=sales_db
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=localhost
DB_PORT=5432

# Or use DATABASE_URL (preferred for production - Render auto-fills this)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Settings (comma separated origins)
# Local development
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# For production (Render), update with your frontend URL:
# CORS_ALLOWED_ORIGINS=https://sales-frontend.onrender.com,https://your-custom-domain.com

# Media Files Configuration
# Set USE_S3=True to use AWS S3 for media files (recommended for production)
# Set USE_S3=False to serve media files via Django/WhiteNoise (simpler but not ideal for production)
USE_S3=False

# AWS S3 Configuration (only needed if USE_S3=True)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1
